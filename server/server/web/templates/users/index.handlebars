<div class="container-fluid h-100">
  <div class="row h-100">
    {{>dashboardNav}}
    <div class="col-sm-9 col-md-10">
      <div style="padding: 30px">
        <h3>Users</h3>
        {{#role user 'researcher'}}
          <a class="btn btn-primary" href="/users/create">Create</a>
        {{/role}}
        <hr>
        <div class="card">
          <div style="padding: 20px">
            <table id="userTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
              <thead>
              <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Module 1 Score</th>
                <th>Module 2 Score</th>
                <th>Module 3 Score</th>
                <th>Joined Study</th>
                {{#role user 'admin'}}
                  <th>ID</th>
                  <th>Update Password</th>
                  <th>Edit</th>
                  <th>Delete</th>
                {{/role}}
              </tr>
              </thead>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  var table;
  $(document).ready(function () {
    table = $('#userTable').DataTable({
      scrollX: true,
      scrollY: '500px',
      scrollCollapse: true,
      lengthChange: false,
      dom: 'Bfrtip',
      buttons: [
        'copy', 'csv', 'excel', 'pdf', 'print','colvis'
      ],
      ajax: {
        url: "/api/table/users",
        data: function (d) {
          d.fields = "firstname  lastname email timeCreated quizCompleted";
        }
      },
      "columns": [
        {
          data: "firstname",
          defaultContent: ""
        },
        {
          data: "lastname",
          defaultContent: ""
        },
        {
          data: "email",
          defaultContent: ""
        },
        {
          data: "quizCompleted.1",
          render: function (data, type, row) {
            if (data && data.moduleCompleted) {
              if (data.score > 80)
                return '<h4><a href="scoreDetails/?id=' + row._id + '&quiz=1" class="badge badge-success">' + data.score + '</a></h4>';
              else
               return '<h4><span class="badge badge-danger badge-pill">' + data.score + '%</span></h4>';
            }
            else
              return 'Not Completed';
          }
        },
        {
          data: "quizCompleted.2",
          render: function (data, type, row) {
            if (data && data.moduleCompleted) {
              if (data.score > 80)
                return '<h4><a href="scoreDetails/?id=' + row._id + '&quiz=2" class="badge badge-success">' + data.score + '</a></h4>';
              else
               return '<h4><span class="badge badge-danger badge-pill">' + data.score + '%</span></h4>';
            }
            else
              return 'Not Completed'
          }
        },
        {
          data: "quizCompleted.3",
          render: function (data, type, row) {
            if (data && data.moduleCompleted) {
              if (data.score > 80)
                return '<h4><a href="scoreDetails/?id=' + row._id + '&quiz=3" class="badge badge-success">' + data.score + '</a></h4>';
              else
               return '<h4><span class="badge badge-danger badge-pill">' + data.score + '%</span></h4>';
            }
            else
              return 'Not Completed'
          }
        },
        {
          data: "timeCreated",
          render: function (data, type, row) {
            var date = new Date(row.timeCreated);
            return date.toDateString() + ' ' + date.toLocaleTimeString('en-us');
          }
        },
        {{#role user 'admin'}}
          {
            data: "_id",
            defaultContent: "",
            visible: false
          },
          {
            data: "_id",
            render: function (data, type, row) {
              return '<button class="btn btn-secondary" onclick="viewChangePassword(\'' + row._id + '\')">Change Password</button>';
            },
            visible: false
          },
          {
            data: "_id",
            render: function (data, type, row) {
              return '<button class="btn btn-secondary" id="edit'+row._id+'" onclick="editDoc(\'' + row._id + '\')">Edit</button>';
            },
            visible: false
          },
          {
            data: "_id",
            render: function (data, type, row) {
              return '<button class="btn btn-danger" id="delete'+row._id+'" onclick="deleteDoc(\'' + row._id + '\')">Delete</button>';
            },
            visible: false
          }
        {{/role}}
      ]
    });
  });
</script>
<script type="text/javascript" src="/public/scripts/users/index.js"></script>
